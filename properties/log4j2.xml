<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>

        <Property name="log-path">logs</Property>

    </Properties>

    <Appenders>

            <RollingFile name="trace-log" fileName="${log-path}/CircusLog.log"

                     filePattern="${log-path}/CircusLog-%d{yyyy-MM-dd}.log">

            <PatternLayout>

                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %c{1} - %msg%n</pattern>

            </PatternLayout>

            <Policies>

                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>

            </Policies>

        </RollingFile>
        <RollingFile name="debug-log" fileName="${log-path}/CircusLog.log"

                     filePattern="${log-path}/CircusLog-%d{yyyy-MM-dd}.log">

            <PatternLayout>

                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} %c{1} - %msg%n</pattern>

            </PatternLayout>

            <Policies>

                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>

            </Policies>

        </RollingFile>
    </Appenders>

    <Loggers>

         
         <Logger name="log4j" level="debug" additivity="false">
            <appender-ref ref="debug-log" level="debug"/>
 
        </Logger>
         <Logger name="log4j" level="trace" additivity="false">
            <appender-ref ref="trace-log" level="trace"/>
 
        </Logger>
        <Root level="debug" additivity="false">

            <AppenderRef ref="debug-log"/>
 
        </Root>
        <Root level="trace" additivity="false">

            <AppenderRef ref="trace-log"/>
 
        </Root>
  
 

     </Loggers>

</Configuration>